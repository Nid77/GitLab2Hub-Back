{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "build",
        "lib": ["ES2020", "ESNext"],
        "esModuleInterop": true,
        "strict": true,
        "module": "commonjs",
        "target": "ES2020",
        "types": ["node"],
        "paths": {
            "@/*": ["src/*"],
            "@/controllers/*": ["src/controllers/*"],
            "@/routes/*": ["src/routes/*"],
            "@/services/*": ["src/services/*"],
            "@/models/*": ["src/models/*"],
            "@/middlewares/*": ["src/middlewares/*"],
            "@/utils/*": ["src/utils/*"],
            "@/constants/*": ["src/constants/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
}
