{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "build",
        "lib": ["ES2020", "ESNext"],
        "esModuleInterop": true,
        "strict": true,
        "module": "commonjs",
        "target": "ES2020",
        "types": ["node"],
        "paths": {
            "@/*": ["src/*"],
            "@/controllers/*": ["src/controllers/*"],
            "@/routes/*": ["src/routes/*"]
        }
    }
}
